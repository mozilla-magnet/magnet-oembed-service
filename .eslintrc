{
  "extends": [
    "eslint:recommended"
  ],

  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "comma-dangle": ["warn", "only-multiline"],
    "no-console": 0
  },

  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  }
}
